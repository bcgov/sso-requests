{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@app/*": ["../app/*"]
    }
  },
  "include": ["src/**/*", "../app/shared/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
